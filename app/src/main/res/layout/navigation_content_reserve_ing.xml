<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rela_reserve"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:background="#EEEEEE"
        >

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="26sp"
        android:text="预定成功！"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@+id/text_1"
        android:text="请确定订单信息后，到指定门店或者地点取车!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <!-- 已预约，订单失效事件，取车地点，联系方式，等待取车 -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:textSize="16sp"
                android:text="订单信息"

                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="预定单号:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="001201508071408"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="联系方式:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="159080808088"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="生成时间:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="2015-08-07 12:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="失效时间:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="2015-08-07 15:00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="取车地点:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="闸北区彭江路602号(闸北店)"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_reserve_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_bg_s"
                    android:textColor="@android:color/white"
                    android:text="取消订单"
                    android:layout_marginRight="16dp"
                    />

                <Button
                    android:id="@+id/btn_reserve_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_bg"
                    android:textColor="@android:color/white"
                    android:text="支付订金"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

